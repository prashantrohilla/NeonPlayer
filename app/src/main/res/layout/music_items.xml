<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/audio_item"
    android:background="#000000"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/music_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/orbitronregular"
        android:text="File Name"
        android:textColor="@color/sblue"
        android:layout_toEndOf="@id/music_img"
        android:layout_toRightOf="@id/music_img"
        android:layout_toStartOf="@id/menuMore"/>

    <ImageView
        android:id="@+id/menuMore"
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="5dp"
        android:src="@drawable/more" />


</RelativeLayout>